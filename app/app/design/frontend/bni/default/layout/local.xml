<?xml version="1.0" encoding="UTF-8"?>
<layout>
	<!--********************ALL PAGES***********************-->
	<default>
		<reference name="head">
			<action method="removeItem"><type>js</type><name>lib/jquery/jquery-1.12.4.min.js</name></action>
			<action method="removeItem"><type>js</type><name>lib/jquery/noconflict.js</name></action>
			<action method="removeItem"><type>skin_css</type><name>css/styles.css</name></action>
			<action method="addJs"><script>lib/jquery/jquery-3.6.0.js</script></action> 
			<action method="addJs"><script>lib/jquery/jquery-migrate-3.3.2.js</script></action>
			<action method="addJs"><script>lib/jquery/noconflict.js</script></action>
			<action method="addItem"><type>skin_css</type><name>css/bootstrap.css</name></action>
			<!--
			<action method="addItem"><type>skin_css</type><name>css/font-awesome.css</name></action>
			-->
			<action method="addItem"><type>skin_css</type><name>font-awesome/css/all.css</name></action>
			<action method="addItem"><type>skin_css</type><name>font-awesome/css/fontawesome.css</name></action>
			<action method="addItem"><type>skin_css</type><name>font-awesome/css/brands.css</name></action>
			<action method="addItem"><type>skin_css</type><name>font-awesome/css/solid.css</name></action>
			<action method="addItem"><type>skin_css</type><name>css/custom.css</name></action>
			<action method="addItem"><type>skin_css</type><name>css/styles.css</name><params/></action>
			<action method="addJs"><script>jquery/jquery.meio.mask.js</script></action>
			<action method="addItem"><type>skin_js</type><name>js/custom/script.js</name></action>
			<remove name="right.reports.product.compared" />
			<remove name="catalog.compare.sidebar" />
		</reference>
		<reference name="top.links">
			<remove name="checkout_cart_link"/>
			
			<action method="removeLinkByUrl">
				<url helper="customer/getAccountUrl"/>
			</action>

			<action method="removeLinkBlock">
				<blockName>wishlist_link</blockName>
			</action>
			
			<action method="addLink" translate="label title" module="customer">
				<label>My Account</label>
				<url helper="customer/getAccountUrl"/>
				<title>My Account</title>
				<prepare/>
				<urlParams/>
				<position>10</position>
				<liParams>class="my-account"</liParams>
				<aParams>class="my-account"</aParams>
			</action>
		</reference>
		<reference name="footer_links">
			<action method="removeLinkBlock">
				<blockName>return_link</blockName>
			</action>
		</reference>
	</default>
	<!--********************ALL PAGES***********************-->

	<!--********************HOME PAGE***********************-->
	<cms_index_index>
		<reference name="head">
			<action method="addItem"><type>skin_css</type><name>css/owl.carousel.css</name></action>
			<action method="addJs"><script>jquery/owl.carousel.min.js</script></action>
		</reference>
	</cms_index_index>
    <!--********************HOME PAGE***********************-->

	<!--********************CATALOG CATEGORY***********************-->
	<catalog_category_default translate="label">
		<reference name="root">
			<action method="setTemplate">
				<template>page/2columns-left.phtml</template>
			</action>
		</reference>
		<reference name="head">
			<action method="addItem"><type>skin_js</type><name>js/custom/product-list.js</name></action>
		</reference>
	</catalog_category_default>
	<catalog_category_layered translate="label">
		<reference name="root">
			<action method="setTemplate">
				<template>page/2columns-left.phtml</template>
			</action>
		</reference>
		<reference name="head">
			<action method="addItem"><type>skin_js</type><name>js/custom/product-list.js</name></action>
		</reference>
	</catalog_category_layered>
	<!--********************CATALOG CATEGORY***********************-->

	<!--********************CATALOG PRODUCT***********************-->	
	<catalog_product_view translate="label">
		<reference name="root">
			<action method="setTemplate">
				<template>page/1column.phtml</template>
			</action>
		</reference>
		<reference name="head">
			<action method="addJs"><script>jquery/jquery.magnific-popup.min.js</script></action>
			<action method="addJs"><script>jquery/owl.carousel.min.js</script></action>
			<action method="addCss"><stylesheet>css/magnific-popup.css</stylesheet></action>
			<action method="addCss"><stylesheet>css/owl.carousel.css</stylesheet></action>
			<action method="addCss"><stylesheet>css/owl.theme.css</stylesheet></action>
			<action method="addItem"><type>skin_js</type><name>js/custom/product.js</name></action>
		</reference>
		<reference name="product.info">
            <block type="page/html_pager" name="product_review_list.toolbar" />
            <block type="review/product_view_list" name="product.reviews" as="reviews" template="review/product/view/list.phtml" after="additional">
                <action method="addToParentGroup"><group>detailed_info</group></action>
                <action method="setTitle" translate="value"><value>Reviews</value></action>
            </block>
		</reference>
		<reference name="product.attributes">
			<action method="setTitle" translate="value"><value>Datasheet</value></action>
		</reference>
        <reference name="product.reviews">
            <block type="review/form" name="product.review.form" as="review_form">
            	<block type="studioforty9_recaptcha/explicit" name="studioforty9.recaptcha.explicit" template="studioforty9/recaptcha/explicit.phtml"/>
                <block type="page/html_wrapper" name="product.review.form.fields.before" as="form_fields_before" translate="label">
                    <label>Review Form Fields Before</label>
                    <action method="setMayBeInvisible"><value>1</value></action>
                </block>
            </block>
        </reference>
	</catalog_product_view>
	<!--********************CATALOG PRODUCT***********************-->

	<!--********************CATALOG SEARCH***********************-->
	<catalogsearch_result_index translate="label">
		<reference name="root">
			<action method="setTemplate">
				<template>page/2columns-left.phtml</template>
			</action>
		</reference>
		<reference name="head">
			<action method="addItem"><type>skin_js</type><name>js/custom/product-list.js</name></action>
		</reference>
	</catalogsearch_result_index>
	<!--********************CATALOG SEARCH***********************-->

	<!--********************CUSTOMER***********************-->
	<customer_account>
		<reference name="left">
			<remove name="sale.reorder.sidebar" />
		</reference>
		<reference name="customer_account_navigation">
			<action method="removeLinkByName"><name>downloadable_products</name></action>
			<action method="removeLinkByName"><name>OAuth Customer Tokens</name></action>
			<action method="removeLinkByName"><name>billing_agreements</name></action>
			<action method="removeLinkByName"><name>recurring_profiles</name></action>
			<action method="removeLinkByName"><name>tags</name></action>
			<action method="removeLinkByName"><name>reviews</name></action>
			<action method="removeLinkByName"><name>wishlist</name></action>
			<action method="removeLinkByName"><name>transparente</name></action>
		</reference>
	</customer_account>

	<customer_logged_out>
		<reference name="top.links">
			<action method="removeLinkByUrl">
				<url helper="customer/getRegisterUrl"/>
			</action>
			<action method="removeLinkByUrl">
				<url helper="customer/getLoginUrl"/>
			</action>
			<action method="addLink" translate="label title" module="customer">
				<label>Login/Register</label>
				<url helper="customer/getLoginUrl"/>
				<title>Login/Register</title>
				<prepare/>
				<urlParams/>
				<position>9</position>
				<liParams>class="login"</liParams>
				<aParams>class="login"</aParams>
			</action>
		</reference>
	</customer_logged_out>

	<customer_logged_in>
		<reference name="top.links">
			<action method="removeLinkByUrl">
				<url helper="customer/getLogoutUrl"/>
			</action>
			<action method="addLink" translate="label title" module="core">
				<label>Log Out</label>
				<url helper="customer/getLogoutUrl"/>
				<title>Log Out</title>
				<prepare/>
				<urlParams/>
				<position>60</position>
				<liParams/>
				<aParams>class="log-out"</aParams>
			</action>
		</reference>
	</customer_logged_in>
	<!--********************CUSTOMER***********************-->

	<!--********************ONESTEPCHECKOUT***********************-->
	<onestepcheckout_index_index>
		<reference name="head">
			<action method="addJs"><script>jquery/jquery.magnific-popup.min.js</script></action>
			<action method="addJs"><script>bootstrap/bootstrap.js</script></action>
			<action method="addCss"><stylesheet>css/magnific-popup.css</stylesheet></action>
			<action method="addItem"><type>skin_js</type><name>js/custom/checkout.js</name></action>
		</reference>
	</onestepcheckout_index_index>
	
	<customer_account_create>
		<reference name="customer_form_register">
			<action method="setTemplate"><template>persistent/customer/form/register.phtml</template></action>
		</reference>
	</customer_account_create>

	<customer_account_edit>
		<reference name="customer_edit">
			<action method="setTemplate"><template>customer/form/edit.phtml</template></action>
		</reference>
	</customer_account_edit>
	<!--********************ONESTEPCHECKOUT***********************-->

	<!--********************CONTACTS***********************-->
	<contacts_index_index>
		<reference name="root">
			<action method="setTemplate">
				<template>page/institutional.phtml</template>
			</action>
		</reference>
	</contacts_index_index>
	<!--********************CONTACTS***********************-->
</layout>
