<?php $_imgSize = 250; ?>
<?php if($this->getItems()->getSize()): ?>
<div class="block-title">
    <h2><?php echo $this->__('Related Products') ?></h2>
</div>
<div class="products-grid products-grid-related">
    <div class="owl-carousel">
        <?php foreach($this->getItems() as $_item): ?>
            <div class="item">
                <div class="product">
                    <a href="<?php echo $_item->getProductUrl() ?>" title="<?php echo $this->escapeHtml($_item->getName()) ?>" class="product-image"><img src="<?php echo $this->helper('catalog/image')->init($_item, 'thumbnail')->resize($_imgSize) ?>" width="<?php echo $_imgSize;?>" height="<?php echo $_imgSize;?>" alt="<?php echo $this->escapeHtml($_item->getName()) ?>" /></a>
                    <div class="product-info">
                        <h6 class="product-name"><a href="<?php echo $_item->getProductUrl() ?>"><?php echo $this->escapeHtml($_item->getName()) ?></a></h6>
                        <div class="price-block">
                            <?php echo $this->getPriceHtml($_item, true, '-related') ?>
                        </div>
                        <div class="actions">
                            <?php if($_item->isSaleable()): ?>
                                <a title="<?php echo $this->quoteEscape($this->__('Add to Cart')) ?>" class="button btn-add-to-cart" href="<?php echo $_item->getProductUrl() ?>"><?php echo $this->__('Add to Cart') ?></a>
                            <?php else: ?>
                                <p class="availability out-of-stock"><span><?php echo $this->__('Out of stock') ?></span></p>
                            <?php endif; ?>
                        </div>
                    </div>
                </div>
            </div>
        <?php endforeach ?>
    </div>
</div>
<?php endif ?>
