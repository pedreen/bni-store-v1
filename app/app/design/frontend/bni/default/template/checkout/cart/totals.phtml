<?php
/**
 * Shopping cart totals template
 *
 * @see Mage_Checkout_Block_Cart_Totals
 * @var $this Mage_Checkout_Block_Cart_Totals
 */
    $_helperCoreCustomizations = Mage::helper('corecustomizations');
    $_coreHelper = $this->helper('core');
?>
<?php if ($this->canApplyMsrp()): ?>
    <div class="cart-msrp-totals"><?php echo $this->__('ORDER TOTAL WILL BE DISPLAYED BEFORE YOU SUBMIT THE ORDER'); ?></div>
<?php else: ?>
    <table id="shopping-cart-totals-table">
        <col />
        <col width="1" />
        <tfoot>
            <?php echo $this->renderTotals('footer'); ?>
            <?php $boletoBancarioIsActive = $_helperCoreCustomizations->isBoletoBancarioActive();?>
            <?php $_promoRule = Mage::getModel('salesrule/rule')->load(1);?>
            <?php if(Mage::app()->getStore()->getCode() == 'comprebel'):?>
                <?php $_promoRule = Mage::getModel('salesrule/rule')->load(2);?>
            <?php endif;?>
            <?php if($boletoBancarioIsActive && $_promoRule->getIsActive() && $_promoRule->getDiscountAmount() > 0):?>
                <?php $grandTotal = $this->getQuote()->getSubtotalWithDiscount();?>
                <?php $shippingTotal = $this->getQuote()->getShippingAddress()->getShippingAmount();?>
                <?php $grandTotalBoleto = $grandTotal - ($grandTotal * $_promoRule->getDiscountAmount() / 100) + $shippingTotal;?>
                <tr class="desconto-boleto-bancario">
                    <td style="" class="a-right" colspan="2">
                        <span>ou </span>
                        <strong>
                            <span class="price"><?php echo $_coreHelper->currency($grandTotalBoleto, true, false);?></span>
                        </strong>
                        <span> no boleto ou PIX</span>
                    </td>
                </tr>
            <?php endif;?>
        </tfoot>
        <tbody>
            <?php echo $this->renderTotals(); ?>
        </tbody>
    </table>
<?php endif; ?>
